[
    {
        "name": "Comment",
        "scope": "comment, punctuation.definition.comment",
        "foreground": "color(var(foreground) alpha(0.3))"
    },
    {
        "name": "Number",
        "scope": "constant.numeric",
        "foreground": "var(green)"
    },
    {
        "name": "Constant",
        "scope": "constant.character, constant.other",
        "foreground": "var(magenta)"
    },
    {
        "name": "Variable",
        "scope": "variable.member",
        "foreground": "var(red)"
    },
    {
        "name": "Operator",
        "scope": "keyword.operator, keyword - keyword.operator, keyword.operator.word",
        "foreground": "var(magenta)"
    },
    {
        "name": "Punctuation",
        "scope": "punctuation.terminator, punctuation.section, punctuation.definition.annotation",
        "foreground": "var(cyan)"
    },
    {
        "name": "Storage",
        "scope": "storage",
        "foreground": "var(red)"
    },
    {
        "name": "String",
        "scope": "string",
        "foreground": "var(green)"
    },
    {
        "name": "Invalid",
        "scope": "invalid",
        "foreground": "var(foreground)",
        "background": "var(red)"
    },
    {
        "name": "Deprecated",
        "scope": "invalid.deprecated",
        "foreground": "var(foreground)",
        "background": "var(yellow)"
    }
]
